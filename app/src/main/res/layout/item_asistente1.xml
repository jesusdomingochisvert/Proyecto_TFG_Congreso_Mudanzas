<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/itemasistente"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:padding="@dimen/dimension10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_imagen"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imagen_asistente"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/black"
                style="@style/DialogCorners"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="centerCrop">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nombre_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nombre de usuario"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintStart_toEndOf="@id/cv_imagen">

        </TextView>

        <TextView
            android:id="@+id/empresa"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/livvic"
            android:textColor="@color/rojo"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            tools:text="Nombre empresa"
            app:layout_constraintStart_toEndOf="@id/cv_imagen"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="false"
            android:focusable="false"

            >

        </TextView>
        <TextView
            android:id="@+id/cargo_empresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/livvic"
            android:textSize="16dp"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Cargo en la empresa">

        </TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="#4626418F"
        app:layout_constraintBottom_toBottomOf="parent">

    </com.google.android.material.divider.MaterialDivider>


</androidx.constraintlayout.widget.ConstraintLayout>